# Futura Project Environment Variables
# Copy this file to .env and update with your Terraform outputs

# Cognito Configuration
NUXT_PUBLIC_COGNITO_USER_POOL_ID=ap-northeast-1_xxxxxxx
NUXT_PUBLIC_COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxx

# AWS Configuration
AWS_REGION=ap-northeast-1

# Project Configuration
PROJECT_NAME=futura
ENVIRONMENT=dev

# DynamoDB Table Names (for server-side use)
NUXT_DYNAMODB_USERS_TABLE=futura-dev-users
NUXT_DYNAMODB_TRANSACTIONS_TABLE=futura-dev-transactions
NUXT_DYNAMODB_MARKET_RATES_TABLE=futura-dev-market-rates
NUXT_DYNAMODB_SESSIONS_TABLE=futura-dev-sessions
NUXT_DYNAMODB_PERMISSIONS_TABLE=futura-dev-permissions

# S3 Configuration
NUXT_S3_UPLOADS_BUCKET=futura-dev-uploads

